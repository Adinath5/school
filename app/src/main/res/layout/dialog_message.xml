<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_card"
    style="@style/CardViewStyle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/dialogTitleView"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:background="@color/global__primary"
            >

        </View>

        <TextView
            android:id="@+id/dialogMessageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/text__primary"
            android:layout_below="@+id/dialogTitleView"
            />
        <View
            android:id="@+id/view18"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/dialogMessageTextView"
            android:background="@color/view__primary_line"/>

        <Button
            android:id="@+id/dialogCancelButton"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@color/md_white_1000"
            android:text="Button"
            android:textColor="@color/md_grey_600"
            android:textStyle="bold"
            android:layout_below="@id/view18"/>

        <Button
            android:id="@+id/dialogOkButton"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@color/md_white_1000"
            android:text="Button"
            android:textColor="@color/global__primary"
            android:textStyle="bold"
            android:layout_toEndOf="@id/dialogCancelButton"
            android:layout_below="@id/view18"/>

        <ImageView
            android:id="@+id/dialogIconImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/baseline_info_white_24" />

        <TextView
            android:id="@+id/dialogTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            android:textColor="@color/md_white_1000"
            android:textSize="18sp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@id/dialogIconImageView"
            android:textStyle="bold"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>