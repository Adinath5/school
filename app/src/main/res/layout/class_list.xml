<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_card"
    style="@style/CardViewStyle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_bar"
            android:background="@color/colorLine"
            android:padding="5dp"
            android:elevation="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Name"
                android:id="@+id/txtclassname"
                android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                android:textStyle="normal"
                android:textSize="16dp"
                android:fontFamily="@font/gothic"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No.of Student"
                android:id="@+id/txtstdno"
                android:layout_alignParentRight="true"
                android:textColor="@color/md_green_800"
                android:textStyle="normal"
                android:textSize="16dp"
                android:fontFamily="@font/gothic"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="15dp"/>



            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txtclassid"
                android:textColor="@color/cardview_light_background"
                android:visibility="gone"
                android:textSize="12dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="15dp"/>


        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>